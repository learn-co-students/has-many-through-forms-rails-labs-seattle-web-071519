
<%=form_for(@post) do |f|%>
    <%=f.label :title%>
    <%=f.text_field :title%>

    <%=f.label :content%>
    <%=f.text_area :content%>

    <%=f.label :category_ids%>
    <%=f.collection_check_boxes :category_ids, @categories, :id, :name %>

    <%=f.label :category%>
    <%=f.fields_for :categories, post.categories.build do |categories_fields|%>
        <%= categories_fields.label :name %>
        <%= categories_fields.text_field :name%>
    <%end%>


    <%=f.submit%>
<%end%>